<WidgetRootElement>:
    tab_pos: 'left_top'
    tab_width: 50
    tab_height: 30
    size_hint: 0.5, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

###:import Window kivy.core.window.Window
#:import OpacityScrollEffect kivy.effects.opacityscroll.OpacityScrollEffect
<WidgetPageElement>:
    canvas.after:
        Color:
            rgba: 0.8, 1, 0.7, 0.5
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    ScrollView:
        effect_cls:OpacityScrollEffect
        BoxLayout:
            id: rows
            orientation:'vertical'
            size_hint_y:None
            #size: self.minimum_size
            height: self.minimum_height

<WidgetRowElement>:
    #orientation: 'lr-tb'
    #orientation: 'horizontal'
    size_hint_y: None
    size: 0, 35

<WidgetFieldElement>:
    orientation:'vertical'

<WidgetFieldElementBaseLabel>:
    #max_lines: 1
    #strip:True
    text_size: self.size
    halign: 'center'

<WidgetFieldElementName>:
    id: name
    valign: 'top'
    #bold: True
    outline_width: 1
    outline_color: 0.7, 0.8, 0.3, 0.5
    canvas.before:
        Color:
            rgba: 1, 1, 0, 0.7
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

<WidgetFieldElementValue>:
    id: value
    valign: 'middle'
    #max_lines: 1
    canvas.before:
        Color:
            rgba: 1, 1, 0.7, 0.5
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
