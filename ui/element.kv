<WidgetRootElement>:
    tab_pos: 'left_top'
    tab_width: 50
    tab_height: 30
    size_hint: 0.5, 0.5
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

#:import OpacityScrollEffect kivy.effects.opacityscroll.OpacityScrollEffect

<WidgetPageElement>:
    #height: self.minimum_height
    canvas.after:
        Color:
            rgba: 0.8, 1, 0.7, 0.5
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    BoxLayout:
        id: content
        orientation:'vertical'

<WidgetPageContentBaseElement>:
    effect_cls:OpacityScrollEffect
    #viewclass: 'WidgetRowElement'

    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

        id: content
        #orientation:'vertical'
        #size_hint_y:None
        #height: self.minimum_height

<WidgetPageTitleElement>
    size_hint_y:None
    height: 55

<WidgetPageRowsElement>

<WidgetRowElement>:
    size_hint_y: None
    height: 35
    orientation: 'horizontal'
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<WidgetRowIndexElement>
    size_hint: None, None
    width: 15
    height: 35
    canvas.before:
        Color:
            rgba: 1, 1, 0, 0.7
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    Label:
        id:content


<WidgetRowDataElement>
    size_hint_y: None
    height: 35
    orientation: 'horizontal'

<WidgetFieldElement>:
    orientation:'vertical'

<WidgetFieldLabelBase>:
    #max_lines: 1
    #strip:True
    text_size: self.size
    halign: 'center'

<WidgetFieldLabelName>:
    id: name
    valign: 'top'
    #bold: True
    outline_width: 1
    outline_color: 0.7, 0.8, 0.3, 0.5
    canvas.before:
        Color:
            rgba: 1, 1, 0, 0.7
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size

<WidgetFieldLabelValue>:
    id: value
    valign: 'middle'
    #max_lines: 1
    canvas.before:
        Color:
            rgba: 1, 1, 0.7, 0.5
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
