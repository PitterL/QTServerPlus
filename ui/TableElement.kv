#: set DEFAULT_LABLE_SIZE 30

<WidgetFieldLabelBase>
    halign: 'center'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: self.border_color
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
        Color:
            rgba: self.background_color
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.x + self.border[3], self.y + self.border[2]
            size: self.width -self.border[1] - self.border[3], self.height - self.border[0] - self.border[2]
    size_hint_y: None
    height: DEFAULT_LABLE_SIZE
    font_name: "font/ARIALN.ttf"
    font_size: '15sp'
    bold: False
    color: 0, 0, 0, 0.7
    #outline_width: 0.1
    #outline_color: 0, 0, 0, 0.8
    background_color: 1, 1, 1, 1
    border_color: 0, 0, 0, 1
    border: (0.5, 0.5, 0.5, 0.5)

<WidgetFieldLabelValue>

<WidgetFieldInputValue>
    size_hint_y: None
    height: DEFAULT_LABLE_SIZE
    multiline: False
    write_tab: False
    size_hint: (1, 1)
    #background_color: (1, 1, 1, 1)
    color_data_valid: (1, 1, 1, 1)
    color_data_invalid: (1, 0.6, 0.6, 1)
    cursor_color: (0, 0, 0, 1)
    pos_hint: {'center_x': 0.5}
    border: (0, 0 , 0, 0)

<WidgetFieldLabelName>
    font_name: "font/ARIALNB.ttf"

<WidgetFieldIndexName>
    height: DEFAULT_LABLE_SIZE * 2
    font_size: 12
    shorten: False
    shorten_from: 'right'
    text_size: self.width, None
    #bold: True

<WidgetFieldTitleName>
    font_name: "font/arialbd.ttf"
    font_size: '15sp'
    color: 1, 1, 1, 1
    outline_width: 0.1
    outline_color: 1, 1, 1, 0.2
    background_color: 0, 0, 0, 1
    border_color: 1, 1, 1, 1
    #border: (0.5, 0.5, 0.5, 0.5)

<LayerBoxLayout>
    size_hint_y: None
    height: self.minimum_height

<WidgetFieldElement>
    orientation:'vertical'

<WidgetFieldIndexElement>
    idx_size_hint: 0.35

<WidgetRowDataElement>

<WidgetRowIndexElement>
    size_hint: 0.2, None

<WidgetRowElementBase>

<WidgetRowTitleElement>

<WidgetRowElement>

<WidgetRecycleDataView>

#:import OpacityScrollEffect kivy.effects.opacityscroll.OpacityScrollEffect
<WidgetPageContentRecycleElement>
    effect_cls: OpacityScrollEffect
    #scroll_type: ['bars']
    scroll_wheel_distance: 100
    bar_width:'9dp'
    #viewclass: 'WidgetRowElement'
    SelectableRecycleBoxLayout
        id: content
        default_size: None, DEFAULT_LABLE_SIZE*2
        default_size_hint: 1, None
        #default_size_hint: 1, 1
        size_hint_y: None
        height: self.minimum_height
        #on_height: print(self.__class__.__name__, "aaa", self.height)
        orientation: 'vertical'
        #multiselect: True
        #touch_multiselect: True

<WidgetPageContentTitleElement>

<WidgetPageContentDataElement>
