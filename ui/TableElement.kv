#: set DEFAULT_LABLE_SIZE 30

<WidgetFieldLabelBase>
    halign: 'center'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: self.border_color
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
        Color:
            rgba: self.background_color
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.x + self.border[3], self.y + self.border[2]
            size: self.width -self.border[1] - self.border[3], self.height - self.border[0] - self.border[2]
    size_hint_y: None
    height: DEFAULT_LABLE_SIZE
    font_name: "font/ARIALN.ttf"
    font_size: '15sp'
    bold: False
    color: 0, 0, 0, 0.7
    #outline_width: 0.1
    #outline_color: 0, 0, 0, 0.8
    background_color: 1, 1, 1, 1
    border_color: 0, 0, 0, 1
    border: (0.5, 0.5, 0.5, 0.5)

<WidgetFieldLabelName>
    font_name: "font/ARIALNB.ttf"

<WidgetFieldIndexName>
    #height: DEFAULT_LABLE_SIZE *2
    font_name: "arial.ttf"
    font_size: '12sp'
    shorten: False
    shorten_from: 'right'
    color: (0, 0.65, 1, 1) if self.hightlight else (0, 0, 0, 1)
    text_size: self.width, None

<WidgetFieldTitleName>
    font_name: "font/arialbd.ttf"
    font_size: '15sp'
    color: 1, 1, 1, 1
    outline_width: 0.1
    outline_color: 1, 1, 1, 0.2
    background_color: 0, 0, 0, 1
    border_color: 1, 1, 1, 1
    border: (0.5, 0.5, 0.5, 0.5)

<WidgetFieldButtonName>
    halign: 'center'
    valign: 'middle'
    size_hint_y: None
    height: DEFAULT_LABLE_SIZE
    font_name: "font/ARIALN.ttf"
    font_size: '15sp'
    bold: False
    color: 0, 0, 0, 0.7
    background_color: 1, 1, 1, 1
    #border: (12, 12, 12, 12)
    background_normal: self.pg_normal
    background_down: self.pg_active
    pg_error: "image/background_error.png"
    pg_active: "image/background_down.png"
    pg_normal: "image/background_normal.png"

<WidgetFieldIndexButtonName>
    #height: DEFAULT_LABLE_SIZE
    font_name: "arial.ttf"
    font_size: '12sp'
    shorten: False
    shorten_from: 'right'
    color: (0, 0.65, 1, 1) if self.state == 'normal' else (0, 0, 0, 0.7)
    disabled_color: 0, 0, 0, 0.7
    text_size: self.width, None
    background_disabled_normal: self.background_normal
    background_disabled_down: self.background_normal

<WidgetFieldLabelValue>

<WidgetFieldInputValue>
    size_hint_y: None
    height: DEFAULT_LABLE_SIZE
    font_name: "font/ARIALN.ttf"
    font_size: '15sp'
    bold: False
    foreground_color: (0, 0, 0, 1)
    background_color: (1, 1, 1, 1)
    cursor_color: (0, 0, 0, 1)
    cursor_blink: True
    border: (1, 1, 1, 1)
    background_normal: self.pg_normal
    background_active: self.pg_active
    multiline: False
    write_tab: False
    #use_handles: False
    pg_error: "image/background_error.png"
    pg_active: "image/background_active.png"
    pg_normal: "image/background_normal.png"

<WidgetFieldElement>
    orientation:'vertical'

<WidgetFieldIndexElement>
    idx_size_hint: 0.35

<WidgetRowDataElement>

<WidgetRowIndexElement>
    size_hint: 0.2, None

<WidgetRowElementBase>

<WidgetRowTitleElement>

<WidgetRowElement>

<WidgetRecycleDataView>

#:import OpacityScrollEffect kivy.effects.opacityscroll.OpacityScrollEffect
<WidgetPageContentRecycleElement>
    effect_cls: OpacityScrollEffect
    #scroll_type: ['bars']
    scroll_wheel_distance: 100
    bar_width:'9dp'
    #viewclass: 'WidgetRowElement'
    SelectableRecycleBoxLayout
        id: content
        default_size: None, DEFAULT_LABLE_SIZE
        default_size_hint: 1, None
        #default_size_hint: 1, 1
        size_hint_y: None
        height: self.minimum_height
        #on_height: print(self.__class__.__name__, "aaa", self.height)
        orientation: 'vertical'
        #multiselect: True
        #touch_multiselect: True

<WidgetPageContentTitleElement>

<WidgetPageContentDataElement>

<WidgetPageLayout>:
    orientation:'vertical'
