#:import UpControlBar ui.PageControlBar.UpControlBar
#:import DownControlBar ui.PageControlBar.DownControlBar
#:import LeftControlBar ui.PageControlBar.LeftControlBar
#:import DownControlBar ui.PageControlBar.DownControlBar
#:import CenterContentBar ui.PageControlBar.CenterContentBar
#:import CenterMessageBar ui.PageControlBar.CenterMessageBar

<DeviceWindow>
    orientation:'vertical'
    UpControlBar:
        id: up
    BoxLayout:
        orientation: 'horizontal'
        LeftControlBar:
            id: left
            size_hint_x: 0.25
        BoxLayout:
            orientation:'vertical'
            size_hint_x: 0.8
            CenterContentBar:
                id: center
            CenterMessageBar:
                id: message
                size_hint_y: 0.2
        RightControlBar:
            id: right
            size_hint_x: 0.05
    UpControlBar:
        id: down
