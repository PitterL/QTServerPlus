<-WidgetPageLayout>:
    orientation:'vertical'

<WidgetPageElement>:
    color: (1, 1, 1, 1)
    background_normal: 'atlas://data/images/defaulttheme/action_item'
    background_down: 'atlas://data/images/defaulttheme/action_item_down'

<WidgetPageMultiInstElement>:
    color: (1, 1, 1, 1)
    background_normal: 'atlas://data/images/defaulttheme/action_item'
    background_down: 'atlas://data/images/defaulttheme/action_item_down'
    TabbedPanel:
        id: content
        tab_pos: 'right_top'
        tab_width: 35
        tab_height: 30
        #size_hint_x: 0.8
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: False

<PageContext>:
    tab_pos: 'left_top'
    tab_width: 35
    tab_height: 30
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False