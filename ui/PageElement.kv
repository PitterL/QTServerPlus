<PageElementRoot>:
    tab_pos: 'left_top'
    tab_width: 35
    tab_height: 30
    #size_hint_x: 0.8
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

<WidgetPageMultiInstElement>:
    canvas.after:
        Color:
            rgba: (0.7, 1, 0.8, 0.6) if self.selected else (0.8, 0.9, 0.6, 0.6)
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    TabbedPanel:
        id: content
        tab_pos: 'right_top'
        tab_width: 35
        tab_height: 30
        #size_hint_x: 0.8
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: False

<WidgetPageElement>:
    #height: self.minimum_height
    canvas.after:
        Color:
            rgba: (0.5, 0.62, 1, 1) if self.selected else (0, 0, 0, 0)
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    BoxLayout:
        id: content
        orientation:'vertical'
